<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/fragment_home"

                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/tab_frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </FrameLayout>


    <RadioGroup
        android:id="@+id/rg_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/bottom_tab_bg"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            style="@style/HomeRadioButton"
            android:drawableTop="@drawable/rb_home_selector"
            android:text="首页"
            />

        <RadioButton
            android:id="@+id/rb_newscenter"
            style="@style/HomeRadioButton"
            android:drawableTop="@drawable/rb_newscenter_selector"
            android:text="新闻中心"
            />

        <RadioButton
            android:id="@+id/rb_smartservice"
            style="@style/HomeRadioButton"
            android:drawableTop="@drawable/rb_smartservice_selector"
            android:text="智慧服务"
            />

        <RadioButton
            android:id="@+id/rb_govaffairs"
            style="@style/HomeRadioButton"
            android:drawableTop="@drawable/rb_gov_affairs_selector"
            android:text="政务"
            />

        <RadioButton
            android:id="@+id/rb_setting"
            style="@style/HomeRadioButton"
            android:drawableTop="@drawable/rb_setting_selector"
            android:text="设置中心"
            />

    </RadioGroup>


</RelativeLayout>